global:
  scrape_interval: 15s
  scrape_timeout: 10s
  evaluation_interval: 15s

rule_files:
  - {{ prometheus_config_dir }}/rules.yml

alerting:
  alertmanagers:
  - static_configs:
    - targets: ["localhost:9093"]

scrape_configs:
  - job_name: "prometheus"
    static_configs:
      - targets:
          - "localhost:9090"
  - job_name: "alertmanager"
    static_configs:
      - targets:
          - "localhost:9093"
  - job_name: "node_exporter"
    scrape_interval: 5s
    static_configs:
    - targets:
      - localhost:9100
      - gitlab.{{ domain_name }}:9100
      - {{ domain_name }}:9100
      - app.{{ domain_name }}:9100
      - db01.{{ domain_name }}:9100
      - db02.{{ domain_name }}:9100
      - runner.{{ domain_name }}:9100
